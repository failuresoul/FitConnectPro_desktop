<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<VBox spacing="20.0" style="-fx-background-color:  #F5F7FA; -fx-padding: 30;"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gym.controllers.admin.SalaryReportsController">

    <Label text="Salary Reports"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #263238;" />

    <Separator />

    <!-- Filters Section -->
    <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
        <Label text="Report Filters"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #263238;" />

        <HBox spacing="15.0" alignment="CENTER_LEFT">
            <VBox spacing="5.0">
                <Label text="Start Date:" style="-fx-font-weight: bold;" />
                <DatePicker fx:id="startDatePicker" prefWidth="150.0" />
            </VBox>

            <VBox spacing="5.0">
                <Label text="End Date:" style="-fx-font-weight: bold;" />
                <DatePicker fx:id="endDatePicker" prefWidth="150.0" />
            </VBox>

            <VBox spacing="5.0">
                <Label text="Trainer:" style="-fx-font-weight: bold;" />
                <ComboBox fx:id="trainerComboBox" prefWidth="200.0" promptText="All Trainers" />
            </VBox>

            <VBox spacing="5.0">
                <Label text=" " />
                <Button fx:id="generateReportButton" text="Generate Report"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px; -fx-font-weight: bold;" />
            </VBox>

            <VBox spacing="5.0">
                <Label text=" " />
                <Button fx:id="exportPdfButton" text="Export PDF"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px;" />
            </VBox>
        </HBox>
    </VBox>

    <!-- Summary Section -->
    <HBox spacing="20.0">
        <VBox spacing="10.0" prefWidth="250.0"
              style="-fx-background-color:  white; -fx-padding: 20; -fx-background-radius:  10;">
            <Label text="Total Salaries Paid" style="-fx-font-size:  13px; -fx-text-fill: #7f8c8d;" />
            <Label fx:id="totalSalariesLabel" text="0.00"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" />
        </VBox>

        <VBox spacing="10.0" prefWidth="250.0"
              style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
            <Label text="Average Salary" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;" />
            <Label fx:id="averageSalaryLabel" text="0.00"
                   style="-fx-font-size:  28px; -fx-font-weight: bold; -fx-text-fill: #3498db;" />
        </VBox>

        <VBox spacing="10.0" prefWidth="250.0"
              style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
            <Label text="Total Records" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;" />
            <Label fx:id="totalRecordsLabel" text="0"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill:  #9b59b6;" />
        </VBox>
    </HBox>

    <!-- Chart Section -->
    <VBox spacing="10.0" style="-fx-background-color:  white; -fx-padding: 20; -fx-background-radius: 10;">
        <Label text="Salary Trends"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #263238;" />
        <LineChart fx:id="salaryTrendsChart" prefHeight="300.0">
            <xAxis>
                <CategoryAxis label="Month" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Salary (BDT)" />
            </yAxis>
        </LineChart>
    </VBox>

    <!-- Data Table Section -->
    <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding:  20; -fx-background-radius: 10;">
        <Label text="Salary Breakdown"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #263238;" />

        <TableView fx:id="salariesTable" prefHeight="300.0">
            <columns>
                <TableColumn fx:id="trainerNameColumn" text="Trainer Name" prefWidth="200.0" />
                <TableColumn fx:id="monthYearColumn" text="Month/Year" prefWidth="120.0" />
                <TableColumn fx:id="baseSalaryColumn" text="Base Salary" prefWidth="120.0" />
                <TableColumn fx:id="bonusColumn" text="Bonus" prefWidth="100.0" />
                <TableColumn fx:id="deductionsColumn" text="Deductions" prefWidth="100.0" />
                <TableColumn fx:id="netSalaryColumn" text="Net Salary" prefWidth="120.0" />
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100.0" />
            </columns>
        </TableView>
    </VBox>

</VBox>