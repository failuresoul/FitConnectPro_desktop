<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.ComboBox?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.control.Separator?>
        <?import javafx.scene.control.TableColumn?>
        <?import javafx.scene.control.TableView?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.scene.layout.Region?>
        <?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" style="-fx-background-color:  #F5F7FA; -fx-padding: 30;"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gym.controllers.admin.SalaryManagementController">

    <Label text="Salary Management"
           style="-fx-font-size:  24px; -fx-font-weight: bold; -fx-text-fill: #263238;" />

    <Separator />

    <HBox spacing="15.0" alignment="CENTER_LEFT"
          style="-fx-background-color:  white; -fx-padding: 20; -fx-background-radius:  10;">
        <Label text="Select Month Year"
               style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <ComboBox fx:id="monthComboBox" promptText="Month" prefWidth="150.0" />
        <ComboBox fx:id="yearComboBox" promptText="Year" prefWidth="120.0" />
        <Button fx:id="loadSalariesButton" text="Load Salaries"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 13px;" />
        <Region prefWidth="50.0" />
        <Button fx:id="generateSalariesButton" text="Generate Salaries"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px; -fx-font-weight: bold;" />
    </HBox>

    <HBox spacing="20.0">
        <VBox spacing="10.0" prefWidth="400.0"
              style="-fx-background-color: white; -fx-padding:  20; -fx-background-radius: 10;">
            <Label text="Total Pending"
                   style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;" />
            <Label fx:id="totalPendingLabel" text="0.00"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" />
        </VBox>
        <VBox spacing="10.0" prefWidth="400.0"
              style="-fx-background-color: white; -fx-padding:  20; -fx-background-radius: 10;">
            <Label text="Total Paid This Month"
                   style="-fx-font-size: 13px; -fx-text-fill:  #7f8c8d;" />
            <Label fx:id="totalPaidLabel" text="0.00"
                   style="-fx-font-size:  28px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" />
        </VBox>
    </HBox>

    <VBox spacing="10.0"
          style="-fx-background-color: white; -fx-padding:  20; -fx-background-radius: 10;">
        <Label text="Salary Records"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #263238;" />
        <TableView fx:id="salariesTable" prefHeight="400.0">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0" />
                <TableColumn fx:id="trainerNameColumn" text="Trainer Name" prefWidth="180.0" />
                <TableColumn fx:id="monthYearColumn" text="Month Year" prefWidth="100.0" />
                <TableColumn fx:id="baseSalaryColumn" text="Base Salary" prefWidth="100.0" />
                <TableColumn fx:id="bonusColumn" text="Bonus" prefWidth="100.0" />
                <TableColumn fx:id="deductionsColumn" text="Deductions" prefWidth="100.0" />
                <TableColumn fx:id="netSalaryColumn" text="Net Salary" prefWidth="120.0" />
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100.0" />
                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="320.0" />
            </columns>
        </TableView>
    </VBox>

</VBox>