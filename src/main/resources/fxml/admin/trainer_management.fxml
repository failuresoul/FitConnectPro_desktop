<?xml version="1.0" encoding="UTF-8"?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.geometry.Insets?>

<VBox spacing="20" style="-fx-background-color:  #F5F7FA; -fx-padding: 30;" xmlns="http://javafx.com/javafx/17. 0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gym.controllers.admin.TrainerManagementController">

    <!-- Header -->
    <Label style="-fx-font-size:  24px; -fx-font-weight: bold; -fx-text-fill: #263238;" text="Trainer Management" />

    <Separator />

    <!-- Search Section -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Search by name, email, or specialization..."
                   prefWidth="400"
                   style="-fx-padding: 10; -fx-font-size: 13px;"/>

        <Button fx:id="searchButton" text="Search"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 13px; -fx-cursor: hand;"/>

        <Button fx:id="clearButton" text="Clear"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 13px; -fx-cursor:  hand;"/>
    </HBox>

    <!-- Trainers Table -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">

        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #263238;" text="Registered Trainers" />

        <TableView fx:id="trainersTable" prefHeight="500" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="60" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="180" text="Full Name" />
                <TableColumn fx:id="specializationsColumn" prefWidth="200" text="Specializations" />
                <TableColumn fx:id="experienceColumn" prefWidth="100" text="Experience" />
                <TableColumn fx:id="salaryColumn" prefWidth="120" text="Monthly Salary" />
                <TableColumn fx:id="clientsColumn" prefWidth="80" text="Clients" />
                <TableColumn fx:id="statusColumn" prefWidth="100" text="Status" />
                <TableColumn fx:id="actionsColumn" prefWidth="280" text="Actions" />
            </columns>
            <placeholder>
                <VBox alignment="CENTER" spacing="15" style="-fx-padding: 50;">
                    <Label style="-fx-font-size: 48px; -fx-opacity: 0.3;" text="ðŸ“‹" />
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #9E9E9E;" text="No trainers found" />
                    <Label style="-fx-font-size: 13px; -fx-text-fill: #BDBDBD;" text="Use the 'Add New Trainer' button in the dashboard to register trainers" />
                </VBox>
            </placeholder>
        </TableView>
    </VBox>

</VBox>