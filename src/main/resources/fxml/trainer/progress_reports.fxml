<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: #F5F7FA;">

    <top>
        <VBox spacing="15.0" style="-fx-padding: 20; -fx-background-color: white;">
            <Label text="Progress Reports" style="-fx-font-size:  24px; -fx-font-weight: bold; -fx-text-fill: #263238;" />

            <HBox spacing="15.0" alignment="CENTER_LEFT">
                <Label text="Select Client:" style="-fx-font-weight: bold;" />
                <ComboBox fx:id="clientComboBox" promptText="Choose a client" prefWidth="250" />
                <Button fx:id="loadReportBtn" text="Load Report"
                        style="-fx-background-color: #3498db; -fx-text-fill:  white; -fx-padding: 10 20;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="exportReportBtn" text="Export PDF"
                        style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-padding: 10 20;" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <VBox spacing="20.0" style="-fx-padding: 30;">

                <!-- Summary Cards -->
                <HBox spacing="20">
                    <VBox spacing="10" prefWidth="200" style="-fx-background-color: white; -fx-padding:  20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                        <Label text="Workouts Completed" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
                        <Label fx:id="workoutsCompletedLabel" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #3498db;" />
                    </VBox>

                    <VBox spacing="10" prefWidth="200" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius:  10; -fx-effect:  dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                        <Label text="Weight Change" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
                        <Label fx:id="weightChangeLabel" text="0 kg" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" />
                    </VBox>

                    <VBox spacing="10" prefWidth="200" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                        <Label text="Goals Achieved" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
                        <Label fx:id="goalsAchievedLabel" text="0 / 0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #f39c12;" />
                    </VBox>

                    <VBox spacing="10" prefWidth="200" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                        <Label text="Attendance Rate" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
                        <Label fx:id="attendanceRateLabel" text="0%" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #9b59b6;" />
                    </VBox>
                </HBox>

                <!-- Progress Chart -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding:  25; -fx-background-radius:  10; -fx-effect:  dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="Weight Progress Over Time" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Separator />
                    <Label text="[Chart will be displayed here]" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-padding: 50;" />
                </VBox>

                <!-- Workout History -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="Recent Workouts" style="-fx-font-size: 18px; -fx-font-weight:  bold;" />
                    <Separator />
                    <TableView fx:id="workoutHistoryTable" prefHeight="250">
                        <columns>
                            <TableColumn fx:id="workoutDateColumn" text="Date" prefWidth="120" />
                            <TableColumn fx:id="workoutTypeColumn" text="Type" prefWidth="150" />
                            <TableColumn fx:id="durationColumn" text="Duration (min)" prefWidth="120" />
                            <TableColumn fx:id="caloriesColumn" text="Calories" prefWidth="100" />
                            <TableColumn fx:id="notesColumn" text="Notes" prefWidth="250" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Body Measurements -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="Body Measurements History" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Separator />
                    <TableView fx:id="measurementsTable" prefHeight="200">
                        <columns>
                            <TableColumn fx:id="measurementDateColumn" text="Date" prefWidth="120" />
                            <TableColumn fx:id="weightColumn" text="Weight (kg)" prefWidth="100" />
                            <TableColumn fx:id="chestColumn" text="Chest (cm)" prefWidth="100" />
                            <TableColumn fx:id="waistColumn" text="Waist (cm)" prefWidth="100" />
                            <TableColumn fx:id="hipsColumn" text="Hips (cm)" prefWidth="100" />
                            <TableColumn fx:id="bodyFatColumn" text="Body Fat %" prefWidth="100" />
                        </columns>
                    </TableView>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>