<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: #F5F7FA;">

    <top>
        <VBox spacing="15.0" style="-fx-padding: 20; -fx-background-color: white;">
            <Label text="Set Daily Goals for Clients" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #263238;" />

            <HBox spacing="15.0" alignment="CENTER_LEFT">
                <Label text="Select Client:" style="-fx-font-weight: bold;" />
                <ComboBox fx:id="clientSelectComboBox" promptText="Choose a client" prefWidth="250" />
                <Label text="Date:" style="-fx-font-weight: bold;" />
                <DatePicker fx:id="goalDatePicker" prefWidth="150" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <VBox spacing="20.0" style="-fx-padding: 30;">

                <!-- Workout Goals -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding:  25; -fx-background-radius:  10; -fx-effect:  dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="Workout Goals" style="-fx-font-size:  18px; -fx-font-weight: bold; -fx-text-fill: #263238;" />
                    <Separator />

                    <GridPane hgap="20" vgap="15">
                        <Label text="Workout Duration (minutes):" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight:  bold;" />
                        <TextField fx:id="workoutDurationField" promptText="e.g., 60" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200" />

                        <Label text="Target Calories to Burn:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;" />
                        <TextField fx:id="caloriesBurnField" promptText="e.g., 500" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200" />
                    </GridPane>
                </VBox>

                <!-- Nutrition Goals -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="Nutrition Goals" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #263238;" />
                    <Separator />

                    <GridPane hgap="20" vgap="15">
                        <Label text="Daily Calorie Limit:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;" />
                        <TextField fx:id="calorieLimitField" promptText="e.g., 2000" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200" />

                        <Label text="Protein Target (g):" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;" />
                        <TextField fx:id="proteinField" promptText="e.g., 150" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200" />

                        <Label text="Carbs Target (g):" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;" />
                        <TextField fx:id="carbsField" promptText="e.g., 200" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200" />

                        <Label text="Fats Target (g):" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight:  bold;" />
                        <TextField fx:id="fatsField" promptText="e. g., 60" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="200" />

                        <Label text="Water Intake (ml):" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;" />
                        <TextField fx:id="waterIntakeField" promptText="e.g., 2000" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="200" />
                    </GridPane>
                </VBox>

                <!-- Special Instructions -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="Special Instructions / Notes" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #263238;" />
                    <Separator />
                    <TextArea fx:id="instructionsArea" promptText="Add any special instructions or notes for the client..."
                              prefHeight="100" wrapText="true" />
                </VBox>

                <!-- Action Buttons -->
                <HBox spacing="15" alignment="CENTER">
                    <Button fx:id="saveGoalsBtn" text="Save Goals"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 12 40; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    <Button fx:id="clearGoalsBtn" text="Clear Form"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 12 40; -fx-font-size: 14px;" />
                </HBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>