<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: #F5F7FA;">

    <top>
        <VBox spacing="15.0" style="-fx-padding: 20; -fx-background-color: white;">
            <Label text="Messages" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #263238;" />

            <HBox spacing="15.0" alignment="CENTER_LEFT">
                <TextField fx:id="searchMessageField" promptText="Search messages..."
                           prefWidth="400.0" style="-fx-padding: 10; -fx-font-size: 14px;" />
                <Button fx:id="searchMessageBtn" text="Search"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 20;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="composeBtn" text="+ New Message"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-weight: bold;" />
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.35" style="-fx-background-color:  transparent;">

            <!-- Left:  Conversations List -->
            <VBox spacing="10.0" style="-fx-padding: 20; -fx-background-color: white;">
                <Label text="Conversations" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <Separator />
                <ListView fx:id="conversationsList" VBox.vgrow="ALWAYS" />
            </VBox>

            <!-- Right: Message Thread -->
            <VBox spacing="10.0" style="-fx-padding: 20; -fx-background-color: white;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label fx:id="conversationTitleLabel" text="Select a conversation"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                </HBox>
                <Separator />

                <!-- Messages Area -->
                <ScrollPane fx:id="messagesScrollPane" VBox.vgrow="ALWAYS"
                            fitToWidth="true" style="-fx-background-color:  #ecf0f1;">
                    <VBox fx:id="messagesContainer" spacing="10" style="-fx-padding: 15;" />
                </ScrollPane>

                <!-- Send Message Area -->
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                    <TextArea fx:id="messageInputArea" promptText="Type your message..."
                              prefHeight="60" HBox.hgrow="ALWAYS" wrapText="true" />
                    <Button fx:id="sendMessageBtn" text="Send"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 15 30; -fx-font-weight: bold;" />
                </HBox>
            </VBox>

        </SplitPane>
    </center>

</BorderPane>