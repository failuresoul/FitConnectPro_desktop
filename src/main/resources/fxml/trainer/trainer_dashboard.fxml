<BorderPane style="-fx-background-color: #F5F7FA;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gym.controllers.trainer.TrainerDashboardController">

    <top>
