        </HBox>
    </top>

    <left>
        <VBox prefWidth="220.0" spacing="5.0" style="-fx-background-color: #34495E; -fx-padding: 20 0;">

            <Label style="-fx-text-fill: #95a5a6; -fx-font-size: 11px; -fx-padding:  10 20;" text="NAVIGATION" />

            <Button fx:id="dashboardBtn" maxWidth="Infinity" style="-fx-background-color:  transparent; -fx-text-fill: white; -fx-alignment:  CENTER_LEFT; -fx-padding: 12 20; -fx-font-size: 14px; -fx-cursor: hand;" text="ðŸ  Dashboard" />

            <Button fx:id="myClientsBtn" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20; -fx-font-size:  14px; -fx-cursor: hand;" text="ðŸ‘¥ My Clients" />

            <Button fx:id="createWorkoutBtn" maxWidth="Infinity" style="-fx-background-color:  transparent; -fx-text-fill: white; -fx-alignment:  CENTER_LEFT; -fx-padding: 12 20; -fx-font-size: 14px; -fx-cursor: hand;" text="ðŸ’ª Create Workout Plan" />

            <Button fx:id="createMealBtn" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20; -fx-font-size: 14px; -fx-cursor: hand;" text="ðŸŽ Create Meal Plan" />

            <Button fx:id="setGoalsBtn" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20; -fx-font-size:  14px; -fx-cursor: hand;" text="ðŸŽ¯ Set Daily Goals" />

            <Button fx:id="progressReportsBtn" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20; -fx-font-size:  14px; -fx-cursor: hand;" text="ðŸ“Š Progress Reports" />

            <Button fx:id="messagesBtn" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20; -fx-font-size: 14px; -fx-cursor: hand;" text="ðŸ’¬ Messages" />

            <Button fx:id="profileBtn" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill:  white; -fx-alignment: CENTER_LEFT; -fx-padding:  12 20; -fx-font-size: 14px; -fx-cursor: hand;" text="âš™ï¸ My Profile" />

        </VBox>
    </left>

    <center>
        <VBox fx:id="contentArea" spacing="20.0" style="-fx-padding: 30; -fx-background-color: #F5F7FA;">

            <Label style="-fx-font-size:  24px; -fx-font-weight: bold; -fx-text-fill: #263238;" text="Dashboard Overview" />

            <Separator />

            <HBox spacing="20.0">
                <VBox prefWidth="250.0" spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;" text="Total Clients" />
                    <Label fx:id="totalClientsLabel" style="-fx-font-size: 36px; -fx-font-weight:  bold; -fx-text-fill: #3498db;" text="0" />
                </VBox>

                <VBox prefWidth="250.0" spacing="10.0" style="-fx-background-color:  white; -fx-padding: 20; -fx-background-radius:  10; -fx-effect:  dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;" text="Today's Workouts" />
                    <Label fx:id="todayWorkoutsLabel" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="0" />
                </VBox>

                <VBox prefWidth="250.0" spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
