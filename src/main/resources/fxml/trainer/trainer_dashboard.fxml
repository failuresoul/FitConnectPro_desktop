            </HBox>

            <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #263238;" text="Quick Actions" />

                <HBox spacing="15.0">
                    <Button fx:id="quickCreateWorkoutBtn" style="-fx-background-color:  #3498db; -fx-text-fill: white; -fx-padding: 12 25; -fx-font-size:  14px;" text="Create Workout Plan" />
                    <Button fx:id="quickCreateMealBtn" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-padding: 12 25; -fx-font-size: 14px;" text="Create Meal Plan" />
