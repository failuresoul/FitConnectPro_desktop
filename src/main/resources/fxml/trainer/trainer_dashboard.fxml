                </HBox>
            </VBox>

            <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #263238;" text="Recent Messages" />

                <TableView fx:id="recentMessagesTable" prefHeight="200.0">
                    <columns>
                        <TableColumn fx:id="messageFromColumn" prefWidth="150.0" text="From" />
                        <TableColumn fx:id="messageTextColumn" prefWidth="350.0" text="Message" />
                        <TableColumn fx:id="messageDateColumn" prefWidth="150.0" text="Date" />
                    </columns>
                </TableView>
            </VBox>

        </VBox>
    </center>

</BorderPane>
