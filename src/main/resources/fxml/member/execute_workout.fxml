<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gym.controllers.member.ExecuteWorkoutController"
            fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">

<VBox spacing="20" style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef); -fx-padding: 25;">

    <!-- Header with Back Button -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5; -fx-cursor: hand;" text="â† Back">
            <cursor><javafx.scene.Cursor fx:constant="HAND" /></cursor>
        </Button>
        <Separator orientation="VERTICAL" />
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="ðŸ’ª Workout Execution" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="workoutTimerLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" text="00:00:00" />
    </HBox>

    <!-- Progress Indicator -->
    <HBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Label fx:id="progressLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3498db;" text="Exercise 1 of 5" />
        <ProgressBar fx:id="progressBar" prefWidth="300" progress="0.2" style="-fx-accent: #3498db;" />
    </HBox>

    <!-- Current Exercise Card -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 3);">

        <!-- Exercise Name and Demo -->
        <VBox spacing="8">
            <Label fx:id="exerciseNameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Exercise Name" />
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;" text="ðŸ“º Demonstration:" />
                <Hyperlink fx:id="demonstrationLink" style="-fx-font-size: 11px;" text="View Video" />
            </HBox>
        </VBox>

        <Separator />

        <!-- Target from Trainer -->
        <VBox spacing="8" style="-fx-background-color: #e8f5e9; -fx-padding: 12; -fx-background-radius: 8;">
            <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="ðŸŽ¯ Target from Trainer" />
            <HBox spacing="20">
                <VBox spacing="3">
                    <Label style="-fx-font-size: 10px; -fx-text-fill: #558b2f;" text="Sets" />
                    <Label fx:id="targetSetsLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="3" />
                </VBox>
                <VBox spacing="3">
                    <Label style="-fx-font-size: 10px; -fx-text-fill: #558b2f;" text="Reps" />
                    <Label fx:id="targetRepsLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="12" />
                </VBox>
                <VBox spacing="3">
                    <Label style="-fx-font-size: 10px; -fx-text-fill: #558b2f;" text="Weight" />
                    <Label fx:id="targetWeightLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="50 kg" />
                </VBox>
                <VBox spacing="3">
                    <Label style="-fx-font-size: 10px; -fx-text-fill: #558b2f;" text="Rest" />
                    <Label fx:id="targetRestLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="60s" />
                </VBox>
            </HBox>
        </VBox>

        <!-- Actual Performance Input -->
        <VBox spacing="10" style="-fx-background-color: #fff3e0; -fx-padding: 12; -fx-background-radius: 8;">
            <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #e65100;" text="ðŸ“ Log Your Performance" />

            <HBox alignment="CENTER_LEFT" spacing="12">
                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 11px; -fx-text-fill: #bf360c;" text="Sets Completed" />
                    <TextField fx:id="actualSetsField" promptText="e.g., 3" style="-fx-font-size: 12px;" />
                </VBox>
                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 11px; -fx-text-fill: #bf360c;" text="Weight Used (kg)" />
                    <TextField fx:id="actualWeightField" promptText="e.g., 50" style="-fx-font-size: 12px;" />
                </VBox>
            </HBox>

            <VBox spacing="4">
                <Label style="-fx-font-size: 11px; -fx-text-fill: #bf360c;" text="Reps for Each Set (comma-separated)" />
                <TextField fx:id="actualRepsField" promptText="e.g., 12, 10, 8" style="-fx-font-size: 12px;" />
                <Label style="-fx-font-size: 9px; -fx-text-fill: #999; -fx-font-style: italic;" text="ðŸ’¡ Enter the reps you completed for each set" />
            </VBox>
        </VBox>

        <!-- Rest Timer -->
        <VBox alignment="CENTER" spacing="8" style="-fx-background-color: #e3f2fd; -fx-padding: 12; -fx-background-radius: 8;">
            <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #1565c0;" text="â±ï¸ Rest Timer" />
            <Label fx:id="restTimerLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" text="00:00" />
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="startRestButton" onAction="#startRestTimer" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-size: 11px; -fx-padding: 6 16; -fx-background-radius: 5; -fx-cursor: hand;" text="â–¶ï¸ Start Rest">
                    <cursor><javafx.scene.Cursor fx:constant="HAND" /></cursor>
                </Button>
                <Button fx:id="stopRestButton" disable="true" onAction="#stopRestTimer" style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-font-size: 11px; -fx-padding: 6 16; -fx-background-radius: 5; -fx-cursor: hand;" text="â¸ï¸ Stop">
                    <cursor><javafx.scene.Cursor fx:constant="HAND" /></cursor>
                </Button>
            </HBox>
        </VBox>

    </VBox>

    <!-- Navigation Buttons -->
    <HBox fx:id="navigationBox" alignment="CENTER" spacing="15" style="-fx-padding: 10;">
        <Button fx:id="previousButton" onAction="#previousExercise" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand;" text="â† Previous">
            <cursor><javafx.scene.Cursor fx:constant="HAND" /></cursor>
        </Button>
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="nextButton" onAction="#nextExercise" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand;" text="Next â†’">
            <cursor><javafx.scene.Cursor fx:constant="HAND" /></cursor>
        </Button>
        <Button fx:id="finishButton" managed="false" onAction="#finishWorkout" style="-fx-background-color: linear-gradient(to bottom, #66bb6a, #4caf50); -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 10 25; -fx-background-radius: 8; -fx-cursor: hand;" text="âœ“ Finish Workout" visible="false">
            <cursor><javafx.scene.Cursor fx:constant="HAND" /></cursor>
        </Button>
    </HBox>

</VBox>

</ScrollPane>
