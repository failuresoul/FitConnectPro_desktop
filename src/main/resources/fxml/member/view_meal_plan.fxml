<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gym.controllers.member.ViewMealPlanController"
      spacing="20" style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef); -fx-padding: 25;">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Button fx:id="backButton" text="â† Back" onAction="#handleBack" style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5; -fx-cursor: hand;">
            <cursor><javafx.scene.Cursor fx:constant="HAND"/></cursor>
        </Button>
        <Separator orientation="VERTICAL"/>
        <Label text="ðŸ½ï¸ My Meal Plan" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <DatePicker fx:id="datePicker" promptText="Select Date" style="-fx-font-size: 13px;"/>
    </HBox>

    <!-- Meal Tabs -->
    <TabPane fx:id="mealTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

        <!-- Breakfast Tab -->
        <Tab text="ðŸŒ… Breakfast">
            <ScrollPane fitToWidth="true">
                <VBox fx:id="breakfastContainer" spacing="15" style="-fx-padding: 20;"/>
            </ScrollPane>
        </Tab>

        <!-- Lunch Tab -->
        <Tab text="â˜€ï¸ Lunch">
            <ScrollPane fitToWidth="true">
                <VBox fx:id="lunchContainer" spacing="15" style="-fx-padding: 20;"/>
            </ScrollPane>
        </Tab>

        <!-- Dinner Tab -->
        <Tab text="ðŸŒ™ Dinner">
            <ScrollPane fitToWidth="true">
                <VBox fx:id="dinnerContainer" spacing="15" style="-fx-padding: 20;"/>
            </ScrollPane>
        </Tab>

        <!-- Snacks Tab -->
        <Tab text="ðŸ¿ Snacks">
            <ScrollPane fitToWidth="true">
                <VBox fx:id="snacksContainer" spacing="15" style="-fx-padding: 20;"/>
            </ScrollPane>
        </Tab>
    </TabPane>

    <!-- Daily Nutrition Summary -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Label text="ðŸ“Š Daily Nutrition Summary" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Separator/>
        <HBox spacing="20" alignment="CENTER">
            <VBox spacing="5" alignment="CENTER" style="-fx-background-color: #fff3cd; -fx-padding: 15; -fx-background-radius: 8; -fx-pref-width: 150;">
                <Label text="Calories" style="-fx-font-size: 12px; -fx-text-fill: #856404;"/>
                <Label fx:id="totalCaloriesLabel" text="0 kcal" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #f39c12;"/>
            </VBox>
            <VBox spacing="5" alignment="CENTER" style="-fx-background-color: #d4edda; -fx-padding: 15; -fx-background-radius: 8; -fx-pref-width: 150;">
                <Label text="Protein" style="-fx-font-size: 12px; -fx-text-fill: #155724;"/>
                <Label fx:id="totalProteinLabel" text="0 g" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
            </VBox>
            <VBox spacing="5" alignment="CENTER" style="-fx-background-color: #cce5ff; -fx-padding: 15; -fx-background-radius: 8; -fx-pref-width: 150;">
                <Label text="Carbs" style="-fx-font-size: 12px; -fx-text-fill: #004085;"/>
                <Label fx:id="totalCarbsLabel" text="0 g" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
            </VBox>
            <VBox spacing="5" alignment="CENTER" style="-fx-background-color: #f8d7da; -fx-padding: 15; -fx-background-radius: 8; -fx-pref-width: 150;">
                <Label text="Fats" style="-fx-font-size: 12px; -fx-text-fill: #721c24;"/>
                <Label fx:id="totalFatsLabel" text="0 g" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
            </VBox>
        </HBox>
    </VBox>

</VBox>

