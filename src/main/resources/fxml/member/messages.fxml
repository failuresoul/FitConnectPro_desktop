<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gym.controllers.member.MessagesController"
      spacing="0"
      prefWidth="1200"
      prefHeight="700"
      style="-fx-background-color: #f5f5f5;">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15"
          style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
        <Button fx:id="backButton" onAction="#handleBack"
                text="â† Back"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16; -fx-background-radius: 5; -fx-cursor: hand;"/>
        <Label text="Messages"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="unreadCountLabel"
               text="0 unread"
               style="-fx-font-size: 14px; -fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Main Content -->
    <HBox spacing="0" VBox.vgrow="ALWAYS">

        <!-- Conversations List -->
        <VBox spacing="10"
              style="-fx-background-color: white; -fx-padding: 15; -fx-min-width: 350; -fx-max-width: 350;">
            <Label text="Conversations"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 10 0;">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                        style="-fx-background-color: white; -fx-border-color: transparent;">
                <VBox fx:id="conversationsContainer" spacing="8"
                      style="-fx-background-color: white; -fx-padding: 5;"/>
            </ScrollPane>
        </VBox>

        <!-- Chat Area -->
        <VBox spacing="0" HBox.hgrow="ALWAYS"
              style="-fx-background-color: #ecf0f1;">

            <!-- Chat Header -->
            <HBox fx:id="chatHeader" alignment="CENTER_LEFT" spacing="15"
                  visible="false" managed="false"
                  style="-fx-background-color: white; -fx-padding: 15 20; -fx-border-color: #dee2e6; -fx-border-width: 0 0 1 0;">
                <VBox spacing="2">
                    <Label fx:id="chatUserNameLabel"
                           text="Select a conversation"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Label>
                    <Label fx:id="chatUserTypeLabel"
                           text=""
                           style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                </VBox>
            </HBox>

            <!-- Messages Area -->
            <ScrollPane fx:id="messagesScrollPane"
                        fitToWidth="true"
                        VBox.vgrow="ALWAYS"
                        hbarPolicy="NEVER"
                        vbarPolicy="AS_NEEDED"
                        style="-fx-background-color: #ecf0f1; -fx-border-color: transparent; -fx-background: #ecf0f1;">
                <VBox fx:id="messagesContainer"
                      spacing="5"
                      style="-fx-background-color: #ecf0f1; -fx-padding: 15;"/>
            </ScrollPane>

            <!-- Message Input Area -->
            <HBox fx:id="messageInputArea"
                  alignment="CENTER"
                  spacing="10"
                  visible="false"
                  managed="false"
                  style="-fx-background-color: white; -fx-padding: 15 20; -fx-border-color: #dee2e6; -fx-border-width: 1 0 0 0;">
                <TextArea fx:id="messageInputField"
                          promptText="Type your message..."
                          wrapText="true"
                          prefRowCount="2"
                          HBox.hgrow="ALWAYS"
                          style="-fx-background-color: #f8f9fa; -fx-border-color: #ced4da; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14px; -fx-text-fill: #2c3e50;"/>
                <Button fx:id="sendButton"
                        text="Send"
                        onAction="#handleSendMessage"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 30; -fx-background-radius: 8; -fx-cursor: hand;">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Button>
            </HBox>

        </VBox>
    </HBox>

</VBox>
